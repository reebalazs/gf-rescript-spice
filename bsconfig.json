{
  "name": "@greenfinity/rescript-spice-utils",
  "$schema": "https://raw.githubusercontent.com/rescript-lang/rescript-compiler/master/docs/docson/build-schema.json",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    },
    {
      "dir": "__tests__",
      "type": "dev",
      "subdirs": true
    }
  ],
  "reason": {
    "react-jsx": 3
  },
  "warnings": {
    "error": "+101"
  },
  "refmt": 3,
  "suffix": ".bs.js",
  "namespace": false,
  "bsc-flags": ["-bs-super-errors", "-bs-no-version-header"],
  "package-specs": [
    {
      "module": "commonjs",
      "in-source": true
    }
  ],
  "bs-dependencies": [
    "@greenlabs/ppx-spice",
    "@rescript/react",
    "rescript-logger"
  ],
  "ppx-flags": ["rescript-logger/ppx", "@greenlabs/ppx-spice/ppx"],
  "bs-dev-dependencies": ["@glennsl/rescript-jest"]
}
